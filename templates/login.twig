{% extends "layout.twig" %}
{% block title %}Login - TicketFlow{% endblock %}
{% block content %}
<div class="min-h-screen flex items-center justify-center hero-gradient px-5">
    <div class="bg-white p-10 rounded-xl shadow-2xl w-full max-w-md">
        <h2 class="text-2xl font-bold mb-2 text-gray-800">Welcome Back</h2>
        <p class="text-gray-600 mb-8">Login to manage your tickets</p>
        
        <form method="POST" action="/login.php">
            <div class="mb-5">
                <label class="block mb-2 font-semibold text-gray-700">Email</label>
                <input type="email" name="email" value="{{ email }}" 
                    class="w-full px-4 py-3 border-2 {% if errors.email %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:border-indigo-500 focus:outline-none transition">
                {% if errors.email %}<span class="text-red-500 text-sm block mt-1">{{ errors.email }}</span>{% endif %}
            </div>
            
            <div class="mb-5">
                <label class="block mb-2 font-semibold text-gray-700">Password</label>
                <input type="password" name="password" 
                    class="w-full px-4 py-3 border-2 {% if errors.password %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:border-indigo-500 focus:outline-none transition">
                {% if errors.password %}<span class="text-red-500 text-sm block mt-1">{{ errors.password }}</span>{% endif %}
            </div>
            
            <button type="submit" class="w-full btn-primary py-3 rounded-lg font-semibold hover:bg-indigo-700 transition">
                Login
            </button>
        </form>
        
        <p class="text-center mt-5 text-gray-600">
            Don't have an account? <a href="/signup.php" class="text-indigo-600 font-semibold">Sign up</a>
        </p>
        
        <div class="mt-5 p-3 bg-gray-100 rounded-lg text-center">
            <small class="text-gray-600">Test: user@test.com / password123</small>
        </div>
    </div>
</div>
{% endblock %}