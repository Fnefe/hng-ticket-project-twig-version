{% extends "layout.twig" %}
{% block title %}Manage Tickets - TicketFlow{% endblock %}
{% block content %}
<div class="min-h-screen bg-gray-50">
    <header class="hero-gradient text-white py-8 px-5 shadow-lg">
        <div class="content-wrapper flex justify-between items-center flex-wrap gap-4">
            <div>
                <h1 class="text-3xl font-bold">Ticket Management</h1>
                <a href="/dashboard.php" class="text-white/80 hover:text-white text-sm mt-2 inline-block">‚Üê Back to Dashboard</a>
            </div>
            <a href="/logout.php" class="bg-white/20 border-2 border-white px-6 py-2 rounded-lg font-semibold hover:bg-white hover:text-indigo-600 transition">
                Logout
            </a>
        </div>
    </header>
    
    <main class="py-10 px-5">
        <div class="content-wrapper">
            {% if not editing %}
            <div class="mb-10">
                <button onclick="document.getElementById('ticketForm').classList.remove('hidden')" 
                    class="btn-primary px-8 py-3 rounded-lg text-lg hover:bg-indigo-700 transition">
                    + Create New Ticket
                </button>
            </div>
            {% endif %}
            
            <div id="ticketForm" class="{% if not editing and not errors %}hidden{% endif %} bg-white p-8 rounded-xl shadow-md mb-10">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">{% if editing %}Edit Ticket{% else %}Create New Ticket{% endif %}</h2>
                    <a href="/tickets.php" class="text-3xl text-gray-400 hover:text-red-500">&times;</a>
                </div>
                
                <form method="POST" action="/tickets.php">
                    {% if editing %}<input type="hidden" name="ticket_id" value="{{ ticket.id }}">{% endif %}
                    <input type="hidden" name="action" value="{% if editing %}update{% else %}create{% endif %}">
                    
                    <div class="mb-5">
                        <label class="block mb-2 font-semibold text-gray-700">Title *</label>
                        <input type="text" name="title" value="{{ ticket.title }}" placeholder="Enter ticket title"
                            class="w-full px-4 py-3 border-2 {% if errors.title %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:border-indigo-500 focus:outline-none">
                        {% if errors.title %}<span class="text-red-500 text-sm block mt-1">{{ errors.title }}</span>{% endif %}
                    </div>
                    
                    <div class="mb-5">
                        <label class="block mb-2 font-semibold text-gray-700">Description</label>
                        <textarea name="description" rows="4" placeholder="Enter ticket description (optional)"
                            class="w-full px-4 py-3 border-2 {% if errors.description %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:border-indigo-500 focus:outline-none">{{ ticket.description }}</textarea>
                        {% if errors.description %}<span class="text-red-500 text-sm block mt-1">{{ errors.description }}</span>{% endif %}
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 mb-5">
                        <div>
                            <label class="block mb-2 font-semibold text-gray-700">Status *</label>
                            <select name="status" class="w-full px-4 py-3 border-2 {% if errors.status %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:border-indigo-500 focus:outline-none">
                                <option value="open" {% if ticket.status == 'open' %}selected{% endif %}>Open</option>
                                <option value="in_progress" {% if ticket.status == 'in_progress' %}selected{% endif %}>In Progress</option>
                                <option value="closed" {% if ticket.status == 'closed' %}selected{% endif %}>Closed</option>
                            </select>
                            {% if errors.status %}<span class="text-red-500 text-sm block mt-1">{{ errors.status }}</span>{% endif %}
                        </div>
                        
                        <div>
                            <label class="block mb-2 font-semibold text-gray-700">Priority</label>
                            <select name="priority" class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none">
                                <option value="low" {% if ticket.priority == 'low' %}selected{% endif %}>Low</option>
                                <option value="medium" {% if ticket.priority == 'medium' %}selected{% endif %}>Medium</option>
                                <option value="high" {% if ticket.priority == 'high' %}selected{% endif %}>High</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex gap-4">
                        <button type="submit" class="btn-primary px-8 py-3 rounded-lg hover:bg-indigo-700 transition">
                            {% if editing %}Update Ticket{% else %}Create Ticket{% endif %}
                        </button>
                        <a href="/tickets.php" class="btn-secondary px-8 py-3 rounded-lg hover:bg-gray-700 transition">Cancel</a>
                    </div>
                </form>
            </div>
            
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-gray-800">All Tickets ({{ tickets|length }})</h2>
            </div>
            
            {% if tickets|length == 0 %}
            <div class="bg-white p-16 rounded-xl text-center text-gray-500">
                <p>No tickets yet. Create your first ticket to get started!</p>
            </div>
            {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for ticket in tickets %}
                <div class="bg-white p-6 rounded-xl shadow-md hover:-translate-y-1 hover:shadow-lg transition">
                    <div class="flex justify-between items-start mb-4 gap-3">
                        <h3 class="text-xl font-bold text-gray-800 flex-1">{{ ticket.title }}</h3>
                        <span class="status-badge status-{{ ticket.status|replace({'_': '-'}) }}">
                            {% if ticket.status == 'in_progress' %}In Progress{% elseif ticket.status == 'open' %}Open{% else %}Closed{% endif %}
                        </span>
                    </div>
                    
                    {% if ticket.description %}
                    <p class="text-gray-600 mb-4 leading-relaxed">{{ ticket.description }}</p>
                    {% endif %}
                    
                    <div class="flex justify-between items-center py-4 border-t border-gray-200 text-sm">
                        <span class="font-semibold {% if ticket.priority == 'high' %}text-red-600{% elseif ticket.priority == 'medium' %}text-yellow-600{% else %}text-green-600{% endif %}">
                            Priority: {{ ticket.priority|capitalize }}
                        </span>
                        <span class="text-gray-400">{{ ticket.createdAt|date('M d, Y') }}</span>
                    </div>
                    
                    <div class="flex gap-3 mt-4">
                        <a href="/tickets.php?edit={{ ticket.id }}" class="flex-1 bg-blue-500 text-white text-center py-2 rounded-lg font-semibold hover:bg-blue-600 transition">
                            Edit
                        </a>
                        <button onclick="confirmDelete('{{ ticket.id }}', '{{ ticket.title|e('js') }}')" 
                            class="flex-1 bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition">
                            Delete
                        </button>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </main>
    
    <div id="deleteModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 px-5">
        <div class="bg-white p-8 rounded-xl max-w-md w-full">
            <h3 class="text-2xl font-bold mb-4 text-gray-800">Confirm Delete</h3>
            <p class="text-gray-600 mb-2">Are you sure you want to delete "<span id="deleteTicketTitle" class="font-semibold"></span>"?</p>
            <p class="text-red-600 font-semibold mb-6">This action cannot be undone.</p>
            <form method="POST" action="/tickets.php" class="flex gap-4">
                <input type="hidden" name="action" value="delete">
                <input type="hidden" name="ticket_id" id="deleteTicketId">
                <button type="submit" class="flex-1 bg-red-500 text-white py-3 rounded-lg font-semibold hover:bg-red-600 transition">Delete</button>
                <button type="button" onclick="document.getElementById('deleteModal').classList.add('hidden')" 
                    class="flex-1 btn-secondary py-3 rounded-lg hover:bg-gray-700 transition">Cancel</button>
            </form>
        </div>
    </div>
    
    <footer class="footer mt-16">
        <div class="content-wrapper"><p>&copy; 2025 TicketFlow. Built for HNG Internship.</p></div>
    </footer>
</div>

<script>
function confirmDelete(id, title) {
    document.getElementById('deleteTicketId').value = id;
    document.getElementById('deleteTicketTitle').textContent = title;
    document.getElementById('deleteModal').classList.remove('hidden');
}
</script>
{% endblock %}